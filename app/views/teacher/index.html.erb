<div class="col-lg-8 col-md-8">
    <div class="col-padded">
        <div class="row gutter">
            <div class="col-lg-12 col-md-12">
                <h1 class="page-title">Corpo Docente</h1>
            </div>
        </div>
        <div class="row gutter">
            <div class="col-lg-12 col-md-12">
                <table class="table table-striped table-courses">
                    <thead>
                        <tr>
                            <th>Nome</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @teachers.sort_by(&:name).each do |teacher| %>
                            <tr>
                                <td>
                                    <a href="<%= teacher_path(teacher) %>" title="<%= teacher.name %>">
                                        <%= teacher.name %>
                                    </a>
                                </td>
                                <td>
                                    <a href="<%= teacher_path(teacher) %>" title="<%= teacher.name %>">+ mais informações</a>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
