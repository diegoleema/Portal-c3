<div class="col-lg-8 col-md-8">
    <div class="col-padded">
        <div class="gutter">
            <div class="col-lg-12 col-md-12">
                <h1 class="page-title">Oportunidades</h1>
            </div>
        </div>
        <div class="gutter">
            <div class="col-lg-12 col-md-12">
                <% @oportunities.each do |oportunity| %>
                <div class="news-mini-wrap col-lg-6 col-md-6">
                    <figure class="news-featured-image">
                        <a href="<%= oportunity_path(oportunity) %>" title="<%= oportunity.title%>">
                            <%= image_tag oportunity.image.url(:thumb), class: 'attachment-thumbnail wp-post-image' %>
                        </a>
                    </figure>
                    <div class="page-title-meta">
                        <h1 class="title-median"><%= link_to oportunity.title, oportunity_path(oportunity)%></h1>
                        <span class="news-meta-date"><b>Publicado em:</b> <%= oportunity.created_at.strftime("%d/%m/%Y")%></span>
                        <p><span class="news-meta-date"><b>Empresa:</b> <%= oportunity.employer%></span></p>
                        <div class="news-summary">
                            <p>
                                <%= sanitize oportunity.description[0..30]%>...
                            </p>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
        <div class="gutter">
            <div class="col-lg-12">
                <%= will_paginate @oportunities, :previous_label => 'Anterior', :next_label => 'PrÃ³ximo' %>
            </div>
        </div>
    </div>
</div>
